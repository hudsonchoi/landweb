@model IEnumerable<LandWeb.Models.CACourse>
@{
    ViewBag.Title = "Chodae Academy";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="subBody">
        <div class="bodyWrap">

            <!-- HEADER START -->
            <header>
                <div class="headerWrap subHead">
                    <div class="menu">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <h1>Chodae Academy</h1>
                    <div class="dots">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </header><!-- HEADER END -->
            <!-- CONTENT START -->
            <content>
                <div class="contentWrap">
                    <div class="listBox" id="infoBox">
                        <div>
                            <h3 class="green">@ViewBag.MemberId</h3>
                            @Html.Hidden("memberid", (string)ViewBag.MemberId)
                            <h2>@ViewBag.FullName</h2>
                        </div>
                        <div>
                            <img src="/img/phone.png" alt="phone icon"><span>전화번호</span>
                            <p class="green" style="margin-bottom: 10px;">@ViewBag.CellPhone</p>
                            <img src="/img/mail.png" alt="phone icon" style="margin-left:20px;"><span>이메일</span>
                            <p class="green">@ViewBag.Email</p>
                        </div>
                    </div>

                    <div class="resultBox" style="margin-bottom: 56px;">
                        <div class="title" style="margin-top: -50px;">
                            <span class="line greenBG"></span>
                            <h3 class="green">Class를 선택하세요</h3>
                            <span class="line greenBG"></span>
                        </div>

                        <div class="classList">
                            @foreach (LandWeb.Models.CACourse dtList in @Model)
                            {
                                <div class="classWrap">
                                    <input type="checkbox" name="course_@dtList.Code" id="course_@dtList.Code" @dtList.Requested />
                                    <label class="listBox classBox" for="course_@dtList.Code">
                                        <div>
                                            <h2>@dtList.Name</h2>
                                            <div>
                                                <h3>@dtList.StartDate ~ @dtList.EndDate, @dtList.DayOfWeekName @dtList.StartTime</h3>
                                                <div>
                                                    <span>@dtList.TeacherName<span class="position"></span></span>
                                                    <span>@dtList.LecturePeriodWeek 주</span>
                                                </div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>

                    <input type="submit" class="basicBtn" value="저 장" />
                </div>
            </content><!-- CONTENT END -->
        </div>

        <!-- POPUP START -->
        <div class="popupWrap" style="@ViewBag.ShowSaveResult">
            <div class="popupBox">
                <h2>@ViewBag.SaveResult.</h2>
                <a href="#" class="basicBtn okay">확 인</a>
            </div>
            <div class="darkBG"></div>
        </div>

        <!-- Fail
        <div class="popupWrap">
            <div class="popupBox">
                <h2>등록에 실패하였습니다.</h2>
                <h2 style="margin-top: 5px;">다시 시도하여 주십시오.</h2>
                <a href="#" class="basicBtn okay" style="top: 46px;">확 인</a>
            </div>
            <div class="darkBG"></div>
        </div>-->
        <!-- POPUP END -->
    </div>
}

<script>
    $(".darkBG").click(function () {
        $(".popupWrap").css("display", "none");
    });

    $(".okay").click(function () {
        $(".popupWrap").css("display", "none");
    });
</script>
